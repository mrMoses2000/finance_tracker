generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  passwordHash  String
  name          String?
  currency      String     @default("USD")
  createdAt     DateTime   @default(now())
  
  categories    Category[]
  expenses      Expense[]
  budgetMonths  BudgetMonth[]
  scheduleItems ScheduleItem[]
  debts         Debt[]
  auditLogs     AuditLog[]
}

model Category {
  id        String    @id @default(uuid())
  label     String
  labelKey  String?   // For system categories: "housing", "transport", etc. Null for custom user categories.
  color     String
  limit     Decimal   @default(0) @db.Decimal(18, 4)
  type      String    @default("expense") // "expense" | "income"
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  expenses  Expense[]
  budgetItems BudgetItem[]
  scheduleItems ScheduleItem[]

  @@unique([userId, label])
}

model Expense {
  id          String   @id @default(uuid())
  amountUSD   Decimal  @db.Decimal(18, 4)
  currency    String   @default("USD")
  description String
  date        DateTime @default(now())
  type        String   @default("expense") // "expense" | "income"
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model BudgetMonth {
  id            String     @id @default(uuid())
  month         DateTime
  incomePlanned Decimal    @default(0) @db.Decimal(18, 4)
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  items         BudgetItem[]
  createdAt     DateTime   @default(now())

  @@unique([userId, month])
}

model BudgetItem {
  id            String      @id @default(uuid())
  budgetMonthId String
  budgetMonth   BudgetMonth @relation(fields: [budgetMonthId], references: [id])
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])
  plannedAmount Decimal     @default(0) @db.Decimal(18, 4)

  @@unique([budgetMonthId, categoryId])
}

model Debt {
  id              String         @id @default(uuid())
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  name            String
  type            String         @default("debt") // "debt" | "loan"
  principal       Decimal        @db.Decimal(18, 4)
  balance         Decimal        @db.Decimal(18, 4)
  interestRate    Decimal        @default(0) @db.Decimal(7, 4)
  startDate       DateTime
  termMonths      Int?
  nextPaymentDate DateTime?
  status          String         @default("active")
  payments        ScheduleItem[]
  createdAt       DateTime       @default(now())
}

model ScheduleItem {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  title      String
  amountUSD  Decimal   @db.Decimal(18, 4)
  type       String    @default("expense") // "expense" | "income"
  dueDate    DateTime
  recurrence String    @default("once") // "once" | "monthly"
  status     String    @default("pending") // "pending" | "paid" | "skipped"
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  debtId     String?
  debt       Debt?     @relation(fields: [debtId], references: [id])
  createdAt  DateTime  @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

model ExchangeRate {
  id            String   @id @default(uuid())
  baseCurrency  String
  quoteCurrency String
  rate          Decimal  @db.Decimal(18, 8)
  asOfDate      DateTime
  source        String
  createdAt     DateTime @default(now())

  @@unique([baseCurrency, quoteCurrency, asOfDate, source])
  @@index([baseCurrency, asOfDate])
}
