# My Finance Environment
# Copy to .env and fill in values

# ===== Database =====
POSTGRES_USER=user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=budget_app

# ===== Server Auth =====
JWT_SECRET=change_me_secure
JWT_EXPIRES_IN=7d

# ===== CORS =====
# Comma-separated origins (no spaces)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_ALL=false

# ===== Networking =====
# Set to true when behind a reverse proxy (nginx, Cloudflare, etc.)
TRUST_PROXY=true

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=20

# ===== Audit Log =====
AUDIT_LOG_ENABLED=true

# ===== Optional Admin Seed (disabled by default) =====
SEED_ADMIN=false
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=change_me_secure
SEED_ADMIN_NAME=Admin User
